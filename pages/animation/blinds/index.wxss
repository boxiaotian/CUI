
.box{
  background-color: #fff;
  box-sizing: border-box;
  position: relative;
}
.top{
  width: 100%;
  background-color: #fff;
  height: 800rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 800rpx;
   box-shadow: 0 0 10rpx rgba(0, 0, 0, .1);
}
.item{
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #eee;
  border-radius: 10rpx;
  margin-top: 10rpx;
  background: #fff;
  text-align: center;
  line-height: 80rpx;
}
.float{
  position: absolute;
  top: 960rpx;
  width: 100%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, .1);
}
.float_top{
  position: absolute;
  top: 160rpx;
  left: 50%;
  transform: translateX(-50%);
  transition: top .2s;
}
.inside{
  width: 100%;
  text-align: center;
  height: 800rpx;
  background-color: #f5f5f5;
  animation: showInside .2s;
}
@keyframes showInside{
  from{
    height: 0rpx;
  }
  to{
    height: 800rpx;
  }
}