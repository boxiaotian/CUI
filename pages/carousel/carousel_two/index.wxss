.date {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.touch{
  width: 100%;
  height: 800rpx;
  background-color: #fff;
  margin-top: 120rpx;
  position: relative;
}
.item{
  width: 320rpx;
  height: 480rpx;
  background:linear-gradient(45deg,#3ae,#f8f);
  border-radius: 6rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  line-height: 480rpx;
  transition: all .4s;
}
.item_img{
  width: 100%;
  height: 100%;
}
.none{
  opacity: 0;
}