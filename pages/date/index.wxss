.date{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.date_top{
  font-size: 66rpx;
  font-weight: bold;
  color: #666;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  margin-top: 30rpx;
}
.date_desc{
  width: 70%;
  font-size: 32rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  padding-left: 2rpx;
}
.date_desc_sub{
font-size: 26rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  padding-left: 2rpx;
}
.weeks{
  width: 100%;
  display: flex;
  justify-content: space-between;
  background-color: #f5f5f5;
}
.single_week{
  width: 14%;
  font-size: 28rpx;
  padding: 20rpx 10rpx;
  text-align: center;
}
.year_month{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 0 20rpx 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background-color: #f5f5f5;
}
.days{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding: 10rpx 6rpx 28rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}
.day{
  width: 14%;
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  text-align: center;
}
.item{
  color: #666;
  position: relative;
}
.pre_item {
  color: #ccc;
}
.today{
  position: absolute;
  top: -8rpx;
  right: -4rpx;
  font-size: 24rpx;
}
.dot{
  width:0;
  height:0;
  border-width:0 10rpx 6rpx;
  border-style:solid;
  border-color:transparent transparent #999; /*透明 透明  灰*/
  left: 50%;
  transform: translateX(-50%);
  bottom: -10rpx;
  position:absolute;
}
.confirm{
  position: fixed;
  bottom: 60rpx;
  right: 20rpx;
  z-index: 999;
  border-radius: 20rpx;
  padding: 20rpx;
  background:linear-gradient(45deg, #666, #999 );
  color: #ccc;
  font-size: 28rpx;
}